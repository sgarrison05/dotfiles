# vim like navigation
bind-key j down
bind-key k up
bind-key h quit
bind-key l open
bind-key m toggle-show-read-feeds

# sets the default browswer
# browser "/usr/bin/brave"
browser "/usr/bin/elinks"

#show-read-feeds no
refresh-on-startup yes
auto-reload yes
reload-time 30

## configuration option: keep-articles-days
## description: If set the a number greater than 0, only articles that are were published within the last <n> days are kept, and older articles are deleted. If set to 0 (default value), this option is not active.
## parameter syntax: <days>
#keep-articles-days 5

# a simple newsbeuter color scheme.
#                           fg          bg
color listnormal            white       black
color listfocus             red         black bold
color info                  cyan        black
color background            white       black
color article               white       black
color listnormal_unread     magenta     black bold
color listfocus_unread      red         black bold
