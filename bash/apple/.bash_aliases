# Listing
alias l='ls -CF'
alias ls='ls -h'
alias ll='ls -l'
alias lla='ls -alF'
alias la='ls -a'

#Configuring
alias cfg-aliases='cd; vim .bash_aliases'
alias cfg-vim='cd; vim .vimrc'

#Applications/Scripts most scripts added to directory in $PATH
alias vi='vim'
alias lg='lazygit'
alias wtr='curl wttr.in'
alias st='curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python3 -'

# Common Spelling Errors
alias clera='clear'
alias cler='clear'
alias clara='clear'
alias cd..='cd ..'

alias docs='cd ~/Documents/ && ll'
alias dev='cd ~/Dev/ && ll'

